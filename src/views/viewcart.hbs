<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div>
      <div class="card mx-auto mt-3" style="width: 58rem;">
        <div class="card-body">
          <h5 class="card-title">Carrito</h5>
          {{#each cartView}}
            <h2 class="card-subtitle mb-2 text-muted">ID del producto <b class="text-danger">{{this.product}}</b></h2>
            <h6>Cantidad solicitada <b class="text-danger">{{this.quantity}}</b></h6>
          {{/each}}
          <a href="#" class="btn btn-success btn-block">Finalizar compra</a>
        </div>
      </div>
    </div>

  </body>
</html>